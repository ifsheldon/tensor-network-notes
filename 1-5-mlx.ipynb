     "output_type": "stream",
     "text": [
      "Grad of x^2 at x = 1 is 2.0\n"
     ]
    }
   ],
   "source": [
    "x1 = mx.ones(())\n",
    "\n",
    "\n",
    "def f(x):\n",
    "    return (x**2).sum()\n",
    "\n",
    "\n",
    "grad_fn = mx.grad(f)\n",
    "grad = grad_fn(x1)\n",
    "print(\"Grad of x^2 at x = 1 is {}\".format(grad))"
   ]
  },
